<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Error">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/font_main</item>
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_200</item>
        <item name="android:padding">@dimen/spacing_medium</item>
    </style>

    <style name="SearchEditText">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">@dimen/font_size_middle</item>
        <item name="android:fontFamily">@font/font_main</item>
        <item name="android:textColor">@color/gray_100</item>
        <item name="android:padding">@dimen/spacing_medium</item>
    </style>

    <style name="SearchIcon">
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_marginEnd">@dimen/spacing_middle</item>
        <item name="android:layout_marginStart">@dimen/spacing_middle</item>
        <item name="android:tint">@color/white_950</item>
        <item name="android:src">@android:drawable/ic_menu_search</item>
    </style>
</resources>